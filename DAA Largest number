#include<stdio.h>
int main(){
	int arr[] = {9,5,7,1},count=0,size;
	count++;
	int n = sizeof(arr)/sizeof(arr[0]);
	count++;
	int max = arr[0];
	count++;
	for(int i=1;i<n;i++){
		count++;
		if(arr[i]>max){
			count++;
			max = arr[i];
			count++;
		}
	}
	count++;
	printf("largest element in array:%d\n",max);
	count++;
	printf("%d\n",count);
	return 0;
}
